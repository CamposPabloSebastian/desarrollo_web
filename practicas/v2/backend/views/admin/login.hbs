<div>
  <form action="/admin/login" method="post">
    <div class="row mb-3">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="inputEmail3"
          name="usuario"
        />
      </div>
    </div>
    <div class="row mb-3">
      <label
        for="inputPassword3"
        class="col-sm-2 col-form-label"
      >Contraseña</label>
      <div class="col-sm-10">
        <input
          type="password"
          class="form-control"
          id="inputPassword3"
          name="password"
        />
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesion</button>
    {{#if error}}
      <div class="error-usuario">
        <p>Usuario o contraseña incorrecto.</p>
      </div>
    {{/if}}
  </form>

</div>